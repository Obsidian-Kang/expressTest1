<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Basic Line Chart</title>

    <link href="/stylesheets/style.css" rel="stylesheet" />

    <style>
      
      #chart {
      max-width: 650px;
      margin: 35px auto;
    }
      
    </style>
    
    <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>    

    <script src="apexcharts.js"></script>
    
   
  </head>

  <body>
     <div id="chart"></div>
     <button id="btn_toggle" onclick="toggle_chart()">Hide Chart</button>

    <script>
      
        var show_chart = true;
      
        var options = {
          series: [{
            name: "Desktops",
            data: [10, 41, 35, 51, 49, 62, 69, 91, 148]
        }],
          chart: {
          height: 350,
          type: 'line',
          zoom: {
            enabled: false
          }
        },
        dataLabels: {
          enabled: false
        },
        stroke: {
          curve: 'straight'
        },
        title: {
          text: 'Product Trends by Month',
          align: 'left'
        },
        grid: {
          row: {
            colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
            opacity: 0.5
          },
        },
        xaxis: {
          categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep'],
        }
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        
        // 2020-08-14 Paul Kang: 原本使用 JQuery 的 $("#chart")，但會有問題。
        // https://github.com/apexcharts/vue-apexcharts/issues/211 提到有同樣的問題
      
        chart.render();
      
        function toggle_chart() {
          if (show_chart) {
            $("#chart").hide();
            $("#btn_toggle").html("Show Chart");           
            show_chart = false;            
          } else {
            $("#chart").show();
            $("#btn_toggle").html("Hide Chart");          
            show_chart = true;              
          }
        }

    </script>

    
  </body>
</html>
